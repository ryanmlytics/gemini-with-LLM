        "url": {
          "raw": "{{base_url}}/eeat",
          "host": ["{{base_url}}"],
          "path": ["eeat"]
        },
        "description": "Assess E-E-A-T quality of content from a URL. Returns Experience, Expertise, Authoritativeness, and Trust scores with rationale."
      }
    },
