    {
      "name": "EEAT Assessment (URL)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{bearer_token}}",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"inputs\": {\n    \"input_type\": \"url\",\n    \"url\": \"https://ai.mlyticsaigc.com/\",\n    \"metadata\": {\n      \"author\": \"Ryan Chang\",\n      \"publish_date\": \"2025-01-15\",\n      \"topic_category\": \"general\"\n    }\n  },\n  \"user\": \"{{user}}\"\n}"
